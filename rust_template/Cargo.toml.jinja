[package]
name = "{{ project_name|lower|replace(" ", "_")|replace(".", "_")|replace("-", "_") }}"           # The name of the target.
version = "0.1.0"      # the current version, obeying semver
authors = ["{{ author_name }} <{{ author_email }}>"]
edition = "2021"       # The edition of the target.
description = "{{ project_description }}"
readme = "README.md"
repository = "{{ repo_url }}"
license = "MIT"
keywords = []
categories = []
{% if rust_targets != 'Binary' %}
[lib]
path = "src/lib.rs"    # The source file of the target.
bench = {% if rust_include_benchmark %}true{% else %}false{% endif %}         # Used as a compiler plugin (deprecated).
{% endif %}{% if rust_targets != 'Library' %}
[[bin]]
name = "main"
path = "src/main.rs"    # The source file of the target.
bench = {% if rust_include_benchmark %}true{% else %}false{% endif %}         # Used as a compiler plugin (deprecated).
{% endif %}
